<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="col-md-10 col-md-offset-1">
  <h1><%= @gym_name %></h1>
<img src="<%= @gym_image %>"/>
<form action= "<%= new_pass_path %>" method= "GET">
  <input name="gym_name" type="hidden" value="<%= @gym_name %>" />
  <input name="address" type="hidden" value="<%= @gym_address %>" />
  <input name="cross_street" type="hidden" value="<%= @gym_name %>" />
  <input name="phone_number" type="hidden" value="<%= @gym_name %>" />
  <button type="submit">Get a day pass</button>
</form>
<br><a href="<%= @gym_url %>">Yelp page</a>
<br><%= @gym_address %>
<br><%= @gym_phone %>

<br><a href="<%= root_path %>">Search again</a>

<br><br><div style='width: 800px;'>
  <div id="map" style='width: 880px; height: 400px; margin-bottom: 20px'></div>
</div>

<script type="text/javascript">
window.onload=function(){
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": <%= @lat %>,
      "lng": <%= @lng %>,
      "picture": {
        "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
        "width":  36,
        "height": 36
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(17);
});
};
</script>
</div>